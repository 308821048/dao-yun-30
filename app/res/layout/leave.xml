<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:background="#F0F3F6"
              android:orientation="vertical">

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:minHeight="30dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imagebtn_register_back"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/button_back_normal" />

        <TextView
            android:id="@+id/textview_register_title"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="80dp"
            android:text="请假申请"
            android:textColor="#FF0000"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/textview_register_userName"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/img_icon_login"
                android:gravity="center_vertical"
                android:minHeight="30dp"
                android:paddingLeft="20dp"
                android:text="姓名："
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_register_username"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/textview_register_userName"
                android:layout_alignRight="@id/textview_register_userName"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:hint="请输入姓名"
                android:inputType="text"
                android:textSize="20sp" >

                <requestFocus android:layout_width="wrap_content" />
            </EditText>

            <TextView
                android:id="@+id/textview_register_xuehao"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:layout_below="@id/textview_register_userName"
                android:layout_marginTop="13dp"
                android:background="@drawable/img_icon_login"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="学  号"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_register_xuehao"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/textview_register_xuehao"
                android:layout_alignRight="@id/textview_register_xuehao"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:hint="请输入学号"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textview_register_xuehao"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/textview_leave"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:layout_below="@id/spinner"
                android:layout_marginTop="10dp"
                android:background="@drawable/img_icon_login"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="请假事由"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textview_leave_time"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:layout_below="@id/textview_leave"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="请假时间"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textview_leave_time"
                android:layout_marginTop="10dip"
                android:text="提交申请"
                android:textColor="#DB7A6A"
                android:textSize="20sp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>